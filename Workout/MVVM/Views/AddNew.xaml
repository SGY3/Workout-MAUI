<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout.MVVM.Views.AddNew"
             Title="Add New Exercise">

    <Grid RowDefinitions=".2*,.7*,.1*">
        <Entry Placeholder="Enter New Exercise" 
               Text="{Binding Exercise}"
               StyleClass="EntryDec"/>
        <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2" 
                                 HorizontalItemSpacing="5" 
                                 VerticalItemSpacing="5"
                                 Orientation="Vertical"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame>
                        <RadioButton Content="{Binding Title}"
                                     GroupName="Category"
                                     IsChecked="{Binding IsSelected}"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout Grid.Row="2"
                               Margin="10"
                               HorizontalOptions="Center"
                               Spacing="10"
                               VerticalOptions="Center">
            <Button x:Name="AddExercise"
                    CornerRadius="10"
                    Text="Add Exercise"
                    Clicked="AddExercise_Clicked"/>
            <Button x:Name="AddCategory"
                    CornerRadius="10"
                    Text="Add Category"
                    Clicked="AddCategory_Clicked"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
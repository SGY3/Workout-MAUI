<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout.MVVM.Views.ExercisePage"
             Title="ExercisePage">
    <Grid RowDefinitions=".1*,.3*,.7*">
        <Label Text="Weigth Loss Workout" StyleClass="Header,Black"/>
        <Grid Grid.Row="1" RowDefinitions=".2*,.8*">
            <Label Text="Categories" StyleClass="Header,DarkGrey"/>
            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Border StyleClass="CategoryCard">
                                <VerticalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding Title}" StyleClass="Header,Black"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

    </Grid>
</ContentPage>
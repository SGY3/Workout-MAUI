<?xml version="1.0" encoding="utf-8" ?>
<?xml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Label Styles -->
    <Style TargetType="Label" Class="LightGray">
        <Setter Property="TextColor" Value="LightGray"/>
    </Style>
    <Style TargetType="Label" Class="DarkGrey">
        <Setter Property="TextColor" Value="DarkGray"/>
    </Style>
    <Style TargetType="Label" Class="Black">
        <Setter Property="TextColor" Value="Black"/>
    </Style>
    <Style TargetType="Label" Class="Header">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Large"/>
    </Style>
    <Style TargetType="Label" Class="Logo">
        <Setter Property="VerticalOptions" Value="Center"/>

    </Style>
    <EllipseGeometry
        x:Key="CircleButton"
        RadiusX="30"
        RadiusY="30"
        Center="50,50"/>
    <Style TargetType="Button" x:Key="PlusButton">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="WidthRequest" Value="100"/>
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="Clip" Value="{StaticResource CircleButton}"/>
    </Style>
    <!-- Shadow Resource -->
    <Shadow x:Key="RoundShadow"
            Brush="Gray"
            Opacity="0.7"
            Radius="15"
            Offset="10,15"/>

    <!-- 🔑 New Border Style for Rounded Rectangle Items -->
    <Style TargetType="Border" Class="CategoryCard">
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="BackgroundColor" Value="LightGray"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
        <!--<Setter Property="WidthRequest" Value="190"/>-->
        <!--<Setter Property="HeightRequest" Value="100"/>-->
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Shadow" Value="{StaticResource RoundShadow}"/>
    </Style>
    <Style TargetType="Entry" Class="EntryDec">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="PlaceholderColor" Value="LightPink"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
</ResourceDictionary>

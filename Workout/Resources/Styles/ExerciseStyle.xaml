<?xml version="1.0" encoding="utf-8" ?>
<?xml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Label Styles -->
    <Style TargetType="Label" Class="LightGray">
        <Setter Property="TextColor" Value="LightGray"/>
    </Style>
    <Style TargetType="Label" Class="DarkGrey">
        <Setter Property="TextColor" Value="DarkGray"/>
    </Style>
    <Style TargetType="Label" Class="Black">
        <Setter Property="TextColor" Value="Black"/>
    </Style>
    <Style TargetType="Label" Class="Header">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Title"/>
    </Style>

    <!-- Shadow Resource -->
    <Shadow x:Key="RoundShadow"
            Brush="Gray"
            Opacity="0.7"
            Radius="15"
            Offset="10,15"/>

    <!-- 🔑 New Border Style for Rounded Rectangle Items -->
    <Style TargetType="Border" Class="CategoryCard">
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="BackgroundColor" Value="LightGray"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Shadow" Value="{StaticResource RoundShadow}"/>
    </Style>

</ResourceDictionary>
